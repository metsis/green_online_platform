<% provide(:title, @film.name) %>

	<div class="span6">
			<h3><%= @film.name %>&nbsp;<%= link_to "edit", edit_film_path(@film) %><br />
			</h3>

			<%= image_tag "poster_placeholder.jpg", alt: @film.name, class: 'img-rounded' %>

			<dl class="dl-horizontal">
  			<dt>Director:</dt>  		
  			<dd><%= link_to @film.director.name, director_path(@film.director) %></dd>
  			<dt>Trailer:</dt>  		
  			<dd><%= @film.trailer_url %></dd>
  			<dt>Categories:</dt>  		
  			<dd>
  				<% @film.categories.each do |category| %>
  				<%= link_to category.name, category_path(category) %><br />
  				<% end %>	
  			</dd>
  		</dl> 
  		<i><%= @film.synopsis %></i><br />

</div>

	<div class="span2">
						<iframe width="320" height="180" src="<%= @film.trailer_url %>" frameborder="0" allowfullscreen>
						</iframe>
	</div><!-- span2 -->

	</div><!-- row -->
